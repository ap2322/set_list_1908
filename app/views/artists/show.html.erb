<h1><%= @artist.name %></h1>

<h2>Songs:</h2>

<% @artist.songs.each do |song| %>
  <section id = "song-<%=song.id%>">
    <h3><%= song.title %></h3>
    <p>Play Count: <%= song.play_count %></p>
    <p>Length: <%= song.length %></p>
  </section>
<% end %>

<%= link_to "New Song", "/artists/#{@artist.id}/songs/new" %>
